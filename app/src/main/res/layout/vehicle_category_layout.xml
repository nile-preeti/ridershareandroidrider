<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_3"
    android:paddingRight="@dimen/margin_3"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/vehicle_Category_Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detail_bottom_margin"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/margin_5"
        android:fontFamily="@font/montserrat_bold"
        android:text="Vehicle Category"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vehicle_Category_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:scrollbars="none" />

</LinearLayout>