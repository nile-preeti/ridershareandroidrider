<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey4"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:fontFamily="@font/montserrat_regular"
        android:padding="@dimen/margin_5"
        android:text="How was your experiemce with driver"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="@dimen/margin_10"
        android:progressBackgroundTint="@color/grey3"
        android:progressTint="@color/yellow"
        android:numStars="5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:fontFamily="@font/montserrat_regular"
        android:padding="@dimen/margin_5"
        android:visibility="gone"
        android:text="What went wrong ?"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/et_billing_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/form_outline_background"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="top"
        android:hint="Type Here.."
        android:inputType="textMultiLine"
        android:padding="@dimen/margin_10"
        android:textColor="@color/white"
        android:textColorHint="@color/background_white"
        android:textSize="12sp"
        android:textStyle="normal"
        android:theme="@style/EditText.Login" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="vertical"
        android:weightSum="2">
        <Button
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@drawable/brown_button_background"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@drawable/brown_button_background"
            android:text="No, Thanks"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>